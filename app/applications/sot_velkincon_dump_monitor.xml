<application>
    <name>sot_VelKinCon Monitor Dumper</name>

      <authors>
          <author email="alessio.rocchi@iit.it">Alessio Rocchi</author>
      </authors>

      <dependencies>
         <port>/root</port>
      </dependencies>
    
      <!-- -------------------- MONITOR ------------------------ -->

      <module>
              <name>dataDumper </name>
              <node>localhost</node>
              <parameters>--name dump_monitor</parameters>
              <tag>dump_monitor</tag>
      </module>

      <module>
              <name>dataDumper</name>
              <node>localhost</node>
              <parameters>--name dump_simulation_time</parameters>
              <tag>dump_simulation_time</tag>
      </module>

    <connection>
        <from>/sot_VelKinCon_DEBUG/monitor:o</from>
        <to>/dump_stream</to>
        <protocol>udp</protocol>
    </connection>

    <connection>
        <from>/clock</from>
        <to>/dump_simulation_time</to>
        <protocol>udp</protocol>
    </connection>

</application>
