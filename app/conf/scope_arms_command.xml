<!-- 
Scope for the joint commands for the arms 
Author: Alessio Rocchi 

This xml file must be used with yarpscope: it plots by columns the joint position commands of arms -->

<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="4" carrier="udp" persistent="1">

<!-- ARMS COMMAND -->

    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="Joint 0 (blue=Right red=Left)"
          minval="-180"
          maxval="180"
          bgcolor="White">
        <graph remote="/coman/right_arm/status:o"
               index="0"
               color="Blue"
               type="lines"
               size="2" />
        <graph remote="/sot_VelKinCon/left_arm/command:o"
               index="0"
               color="Red"
               size="2"
               type="lines" />
    </plot>
    
